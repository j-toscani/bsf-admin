{
  "kind": "collectionType",
  "collectionName": "tournaments",
  "info": {
    "name": "Tournament",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "date": {
      "type": "date"
    },
    "teamsize": {
      "type": "enumeration",
      "enum": [
        "one",
        "two",
        "three"
      ]
    },
    "contestants": {
      "via": "participated_in",
      "collection": "player"
    },
    "games": {
      "via": "tournament",
      "collection": "game"
    },
    "active": {
      "type": "boolean",
      "default": false
    },
    "host": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "tournaments"
    }
  }
}
